<Window x:Class="WypozyczalniaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wypożyczalnia" 
        Height="400" Width="500" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#FAF3E0" Icon="/Mcdo-Design-Smooth-Leopard-Documents-Folder-Sakura.512.png">

    <Grid>
        <!-- Tło zaokrąglonego kontenera -->
        <Border Background="White" CornerRadius="15" Width="350" Height="300"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="20">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Nagłówek -->
                <TextBlock Text="Witamy w Wypożyczalni!" 
                           FontSize="22" FontWeight="Bold" Foreground="#5D5C61"
                           HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- Przyciski ze stylem -->
                <Button Content="Wypożyczalnia" FontSize="16" Padding="12"
                        Background="#A8D5BA" Foreground="White" Width="250"
                        BorderThickness="0" Margin="5" Click="Wypozyczalnia_Click"/>

                <Button Content="Karnety" FontSize="16" Padding="12"
                        Background="#F4B400" Foreground="White" Width="250"
                        BorderThickness="0" Margin="5" Click="Karnety_Click"/>

                <Button Content="Wyjście" FontSize="16" Padding="12"
                        Background="#E57373" Foreground="White" Width="250"
                        BorderThickness="0" Margin="5" Click="Wyjdz_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

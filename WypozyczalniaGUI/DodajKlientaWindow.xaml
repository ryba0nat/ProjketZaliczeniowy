<Window x:Class="WypozyczalniaGUI.DodajKlientaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Klienta"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen" Background="#FAF3E0" Icon="/Mcdo-Design-Smooth-Leopard-Documents-Folder-Sakura.512.png">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Imię:" Grid.Row="0"/>
        <TextBox x:Name="ImieTextBox" Grid.Row="0" Margin="0,19,0,1"/>

        <TextBlock Text="Nazwisko:" Grid.Row="1"/>
        <TextBox x:Name="NazwiskoTextBox" Grid.Row="1" Margin="0,18,0,40" Grid.RowSpan="2"/>

        <TextBlock Text="PESEL:" Grid.Row="2" Margin="0,17,0,40" Grid.RowSpan="2"/>
        <TextBox x:Name="PeselTextBox" Grid.Row="2" Margin="0,34,0,1"/>

        <Button Content="Dodaj" Click="Dodaj_Click" Grid.Row="3" HorizontalAlignment="Center"
                Width="150" Height="40" Background="#A8D5BA" Foreground="White" FontSize="16" RenderTransformOrigin="0.496,0.569" Margin="0,31,0,-31"/>
    </Grid>
</Window>

